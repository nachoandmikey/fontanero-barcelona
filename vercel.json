{
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/",
      "has": [{ "type": "host", "value": "fontanero.barcelona" }],
      "destination": "/es/index.html"
    },
    {
      "source": "/:path((?!es/|en/|_astro/).*)",
      "has": [{ "type": "host", "value": "fontanero.barcelona" }],
      "destination": "/es/:path"
    },
    {
      "source": "/",
      "has": [{ "type": "host", "value": "plumber.barcelona" }],
      "destination": "/en/index.html"
    },
    {
      "source": "/:path((?!es/|en/|_astro/).*)",
      "has": [{ "type": "host", "value": "plumber.barcelona" }],
      "destination": "/en/:path"
    }
  ],
  "headers": [
    {
      "source": "/_astro/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/fonts/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
