{
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/",
      "has": [{ "type": "host", "value": "plumber.barcelona" }],
      "destination": "/en/"
    },
    {
      "source": "/",
      "has": [{ "type": "host", "value": "www.plumber.barcelona" }],
      "destination": "/en/"
    },
    {
      "source": "/services/:path*",
      "has": [{ "type": "host", "value": "plumber.barcelona" }],
      "destination": "/en/services/:path*"
    },
    {
      "source": "/services/:path*",
      "has": [{ "type": "host", "value": "www.plumber.barcelona" }],
      "destination": "/en/services/:path*"
    },
    {
      "source": "/areas/:path*",
      "has": [{ "type": "host", "value": "plumber.barcelona" }],
      "destination": "/en/areas/:path*"
    },
    {
      "source": "/areas/:path*",
      "has": [{ "type": "host", "value": "www.plumber.barcelona" }],
      "destination": "/en/areas/:path*"
    },
    {
      "source": "/contact",
      "has": [{ "type": "host", "value": "plumber.barcelona" }],
      "destination": "/en/contact"
    },
    {
      "source": "/contact",
      "has": [{ "type": "host", "value": "www.plumber.barcelona" }],
      "destination": "/en/contact"
    }
  ],
  "headers": [
    {
      "source": "/_astro/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/fonts/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
