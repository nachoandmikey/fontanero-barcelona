{
  "installCommand": "npm install",
  "rewrites": {
    "beforeFiles": [
      {
        "source": "/",
        "has": [{ "type": "host", "value": "plumber.barcelona" }],
        "destination": "/en/index.html"
      },
      {
        "source": "/",
        "has": [{ "type": "host", "value": "www.plumber.barcelona" }],
        "destination": "/en/index.html"
      },
      {
        "source": "/:path((?!en|_astro|favicon|og-image|robots|sitemap).*)",
        "has": [{ "type": "host", "value": "plumber.barcelona" }],
        "destination": "/en/:path"
      },
      {
        "source": "/:path((?!en|_astro|favicon|og-image|robots|sitemap).*)",
        "has": [{ "type": "host", "value": "www.plumber.barcelona" }],
        "destination": "/en/:path"
      }
    ]
  },
  "headers": [
    {
      "source": "/_astro/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/fonts/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
