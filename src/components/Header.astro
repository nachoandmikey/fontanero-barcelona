---
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/utils';
import { PHONE, PHONE_URL } from '../lib/constants';
import LanguageSelector from './LanguageSelector.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const navItems = [
  { href: getLocalizedPath('/', lang), label: t('nav.home') },
  { href: getLocalizedPath(lang === 'es' ? '/servicios' : '/services', lang), label: t('nav.services') },
  { href: getLocalizedPath(lang === 'es' ? '/zonas' : '/areas', lang), label: t('nav.areas') },
  { href: getLocalizedPath(lang === 'es' ? '/contacto' : '/contact', lang), label: t('nav.contact') },
];
---

<header class="bg-white shadow-sm sticky top-0 z-40">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href={getLocalizedPath('/', lang)} class="flex items-center space-x-2">
        <span class="text-2xl">ðŸ”§</span>
        <span class="font-bold text-lg text-primary-600 hidden sm:inline">{t('site.name')}</span>
      </a>
      
      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center space-x-6">
        {navItems.map(item => (
          <a 
            href={item.href} 
            class="text-gray-600 hover:text-primary-600 transition-colors font-medium"
          >
            {item.label}
          </a>
        ))}
      </nav>
      
      <!-- Right side: Phone CTA + Language -->
      <div class="flex items-center space-x-3">
        <LanguageSelector />
        <a 
          href={PHONE_URL}
          class="bg-primary-600 hover:bg-primary-700 text-white px-4 py-2 rounded-lg font-semibold text-sm transition-colors flex items-center space-x-2"
        >
          <span>ðŸ“ž</span>
          <span class="hidden sm:inline">{PHONE.display}</span>
        </a>
      </div>
    </div>
    
    <!-- Mobile Nav -->
    <nav class="md:hidden border-t py-2 flex justify-around">
      {navItems.map(item => (
        <a 
          href={item.href} 
          class="text-gray-600 hover:text-primary-600 text-sm font-medium"
        >
          {item.label}
        </a>
      ))}
    </nav>
  </div>
</header>
