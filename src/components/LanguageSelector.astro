---
import { getLangFromUrl, getAlternateUrls } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const alternates = getAlternateUrls(Astro.url.pathname, lang);
---

<div class="flex items-center space-x-1 text-sm">
  <a 
    href={alternates.es}
    class:list={[
      'px-2 py-1 rounded transition-colors',
      lang === 'es' ? 'bg-primary-100 text-primary-700 font-semibold' : 'text-gray-500 hover:text-gray-700'
    ]}
    aria-label="EspaÃ±ol"
  >
    ES
  </a>
  <span class="text-gray-300">|</span>
  <a 
    href={alternates.en}
    class:list={[
      'px-2 py-1 rounded transition-colors',
      lang === 'en' ? 'bg-primary-100 text-primary-700 font-semibold' : 'text-gray-500 hover:text-gray-700'
    ]}
    aria-label="English"
  >
    EN
  </a>
</div>
